{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": [],
    "types": [],
    "paths": {
      "@vinojs/*": ["packages/*/src"]
    }
  }
}
